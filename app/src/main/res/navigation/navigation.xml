<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/editPlaceFragment"
        android:name="com.yllxh.tourassistant.screens.editplace.EditPlaceFragment"
        android:label="EditPlaceFragment"
        tools:layout="@layout/fragment_edit_place">
        <argument
            android:name="place"
            app:argType="com.yllxh.tourassistant.data.source.local.database.entity.Place" />
        <action
            android:id="@+id/action_editPlaceFragment_to_selectPlaceFragment"
            app:destination="@id/selectPlaceMapFragment" />
        <action
            android:id="@+id/action_editPlaceFragment_to_addTodoFragment"
            app:destination="@id/addTodoFragment" />
        <action
            android:id="@+id/action_editPlaceFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.yllxh.tourassistant.screens.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_addTodoFragment"
            app:destination="@id/addTodoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editPlaceFragment"
            app:destination="@id/editPlaceFragment" />
        <action
            android:id="@+id/action_mainFragment_to_selectPlaceFragment"
            app:destination="@id/selectPlaceMapFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editPathFragment"
            app:destination="@id/editPathFragment" />
    </fragment>
    <fragment
        android:id="@+id/editPathFragment"
        android:name="com.yllxh.tourassistant.screens.editpatth.EditPathFragment"
        android:label="EditPathFragment"
        tools:layout="@layout/fragment_edit_path">
        <argument
            android:name="path"
            app:argType="com.yllxh.tourassistant.data.source.local.database.entity.Path" />
        <action
            android:id="@+id/action_editPathFragment_to_selectPlacesFragment"
            app:destination="@id/selectPlacesFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectPlaceMapFragment"
        android:name="com.yllxh.tourassistant.screens.selectplacemap.SelectPlaceMapFragment"
        android:label="fragment_select_place"
        tools:layout="@layout/fragment_select_place" >
        <argument
            android:name="selectedPlace"
            app:argType="com.yllxh.tourassistant.data.source.local.database.entity.Place" />
        <action
            android:id="@+id/action_selectPlaceFragment_to_editPlaceFragment"
            app:destination="@id/editPlaceFragment"
            app:popUpTo="@id/editPlaceFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addTodoFragment"
        android:name="com.yllxh.tourassistant.screens.addtodo.AddTodoFragment"
        android:label="AddTodoFragment" >
        <argument
            android:name="todo"
            app:argType="com.yllxh.tourassistant.data.source.local.database.entity.ToDo" />
    </fragment>
    <fragment
        android:id="@+id/selectPlacesFragment"
        android:name="com.yllxh.tourassistant.screens.selectplaces.SelectPlacesFragment"
        android:label="SelectPlacesFragment" >
        <argument
            android:name="path"
            app:argType="com.yllxh.tourassistant.data.source.local.database.entity.Path" />
        <action
            android:id="@+id/action_selectPlacesFragment_to_editPathFragment"
            app:destination="@id/editPathFragment"
            app:popUpTo="@id/editPathFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>