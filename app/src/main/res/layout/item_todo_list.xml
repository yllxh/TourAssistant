<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="toDo"
            type="com.yllxh.tourassistant.data.source.local.database.entity.ToDo" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#009688"
        android:elevation="8dp"
        android:minHeight="48dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/importance_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableStart="@drawable/ic_favorite_24dp"
                android:text="@{` ` + toDo.importance}"
                android:textColor="@color/colorTextLight"
                android:textSize="18sp"
                tools:text=" 8" />

            <TextView
                android:id="@+id/note_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:maxLines="2"
                android:text="@{toDo.note}"
                android:textColor="@color/colorTextLight"
                android:textSize="18sp"
                tools:text="This is a note tha will be shown on a todo list item and should should not be compleatly shown just enough to fill the first line of the view where it will be displayed." />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>