<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="place"
            type="com.yllxh.tourassistant.data.source.local.database.entity.Place" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/divider"
                style="@style/Divider.Horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/number_of_notes_images_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/country_city_text_view" />

            <TextView
                android:id="@+id/pace_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:text="@{place.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/importance_label_text_view"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Place Name" />

            <TextView
                android:id="@+id/country_city_text_view"
                view_visibility="@{place.location.country.empty ? (place.location.city.empty ? false : true) : true}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="@{place.location.country + `, ` + place.location.city}"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/colorTextHalfTransparent"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/pace_name_text_view"
                app:layout_constraintTop_toBottomOf="@+id/pace_name_text_view"
                tools:text="Country, City" />

            <TextView
                android:id="@+id/importance_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_bookmark_48"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@{String.valueOf(place.importance)}"
                android:textColor="@color/colorTextLight"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/pace_name_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pace_name_text_view"
                tools:text="8" />

            <Button
                android:id="@+id/show_toDos_button"
                view_visibility="@{place.toDos.size() > 0 ? true : false}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/hide_toDos"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                app:layout_constraintBottom_toBottomOf="@+id/number_of_notes_images_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/number_of_notes_images_view" />

            <ImageView
                android:id="@+id/number_of_notes_images_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/notes_24"
                app:layout_constraintBottom_toTopOf="@+id/place_toDo_recycleView"
                app:layout_constraintStart_toStartOf="@+id/importance_label_text_view" />

            <TextView
                android:id="@+id/number_of_notes_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{String.valueOf(place.toDos.size())}"
                app:layout_constraintBottom_toBottomOf="@+id/number_of_notes_images_view"
                app:layout_constraintStart_toEndOf="@+id/number_of_notes_images_view"
                app:layout_constraintTop_toTopOf="@+id/number_of_notes_images_view"
                tools:text="8" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/place_toDo_recycleView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
